<% icon_sizes = Rails.configuration.serviceworker.icon_sizes %>
{
  "name": "Journal - Coronasafe",
  "short_name": "Journal",
  "start_url": "/",
  "icons": [
  <% icon_sizes.map { |s| "#{s}x#{s}" }.each.with_index do |dim, i| %>
    {
      "src": "<%= image_path "serviceworker-rails/heart-#{dim}.png" %>",
      "sizes": "<%= dim %>",
      "type": "image/png"
    }<%= i == (icon_sizes.length - 1) ? '' : ',' %>
  <% end %>
  ],
  "theme_color": "#5850ec",
  "shortcuts": [
    {
      "name": "Scan QR Code",
      "short_name": "Scan",
      "description": "Mark entry to an establishment by scanning QR Code",
      "url": "/user/scan",
      "icons": [{ "src": "/images/scan.png", "sizes": "192x192" }]
    }
  ],
  "background_color": "#FFFFFF",
  "display": "standalone",
  "orientation": "portrait"
}
